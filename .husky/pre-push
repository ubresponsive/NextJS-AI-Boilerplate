echo "Running pre-push validation..."

# Run basic lint check (non-blocking)
echo "🔧 Running quick lint check..."
npm run lint || echo "⚠️  Lint issues found, but push will proceed"

# Basic type check (non-blocking)
echo "🔎 Running type check..."
npm run type-check || echo "⚠️  Type errors found, but push will proceed"

echo "Pre-push validation completed! 🚀"